<h1>Add a link</h1>
<%= form_for @new, url: {action: "create"}, html: {class: "blob"} do |f| %>
<table>
  <tr><td>Name of link:</td><td><%= f.text_field :name %></td></tr>
  <tr><td>Link address:</td><td><%= f.text_field :link, value: "http://" %></td></tr>
  <tr><td>Description:</td><td><%= f.text_area :description %></td></tr>
</table>
  <%= f.submit "Add link" %>
<% end %>