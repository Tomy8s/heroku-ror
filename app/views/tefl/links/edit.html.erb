<h1>Edit <%= @link.name %></h1>
<%= form_for @link, url: {action: "update"}, html: {class: "blob"} do |f| %>
  <table>
    <tr><td>Name of link:</td><td><%= f.text_field :name %></td></tr>
    <tr><td>Link address:</td><td><%= f.text_field :link %></td></tr>
    <tr><td>Description:</td><td><%= f.text_area :description %></td></tr>
  </table>
  <%= f.submit "Update link" %>
<% end %>